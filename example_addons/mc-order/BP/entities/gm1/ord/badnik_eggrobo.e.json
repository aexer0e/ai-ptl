{
    "format_version": "1.18.20",
    "minecraft:entity": {
        "description": {
            "identifier": "gm1_ord:badnik_eggrobo",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "properties": {
                "gm1_ord:is_vulnerable": { "type": "bool", "default": true },
                "gm1_ord:is_shooting": { "type": "bool", "default": false, "client_sync": true }
            }
        },
        "component_groups": {
            "gm1_ord:vulnerable": { "minecraft:type_family": { "family": [ "eggman", "eggrobo" ]}},
            "gm1_ord:behavior": {
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 2,
                    "entity_types": [
                        { "filters": { "test": "is_family", "subject": "other", "value": "player" }, "max_dist": 30 }
                    ]
                },
                "minecraft:behavior.ranged_attack": {
                    "burst_shots": 1,
                    "charge_shoot_trigger": 1.5,
                    "charge_charged_trigger": 0.5,
                    "priority": 2,
                    "attack_interval_min": 1,
                    "attack_interval_max": 2,
                    "attack_radius": 86
                },
                "minecraft:behavior.random_hover": {
                    "priority": 12,
                    "xz_dist": 8,
                    "y_dist": 8,
                    "y_offset": -1,
                    "interval": 1,
                    "hover_height": [ 1, 4 ]
                },
                "minecraft:movement": { "value": 0.3 },
                "minecraft:flying_speed": { "value": 0.15 },
                "minecraft:navigation.hover": {
                    "can_path_over_water": true,
                    "can_sink": false,
                    "can_pass_doors": false,
                    "can_path_from_air": true,
                    "avoid_water": true,
                    "avoid_damage_blocks": true,
                    "avoid_sun": false
                },
                "minecraft:movement.hover": {},
                "minecraft:jump.static": {},
                "minecraft:can_fly": {},
                "minecraft:behavior.float": { "priority": 19 }
            }
        },
        "components": {
            "minecraft:type_family": { "family": [ "eggman_vulnerable", "eggrobo" ]},
            "minecraft:home": { "restriction_radius": 3, "home_block_list": [ "minecraft:air" ]},
            "minecraft:collision_box": { "width": 1, "height": 2 },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:game_event_movement_tracking": { "emit_flap": true },
            "minecraft:follow_range": { "value": 1024 },
            "minecraft:damage_sensor": { "triggers": { "cause": "fall", "deals_damage": "no" }},
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:health": { "value": 16, "max": 16 },
            "minecraft:physics": {},
            "minecraft:pushable": { "is_pushable": true, "is_pushable_by_piston": true }
        },
        "events": {
            "minecraft:entity_spawned": { "add": { "component_groups": [ "gm1_ord:behavior" ]}},
            "gm1_ord:vulnerable.add": {
                "add": { "component_groups": [ "gm1_ord:vulnerable" ]},
                "set_property": { "gm1_ord:is_vulnerable": true }
            },
            "gm1_ord:vulnerable.remove": {
                "add": { "component_groups": [ "gm1_ord:invulnerable" ]},
                "set_property": { "gm1_ord:is_vulnerable": false }
            }
        }
    }
}