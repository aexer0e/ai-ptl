// @prettier-ignore
{
    "compilerOptions": {
        "checkJs": false,
        "allowJs": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "baseUrl": "./BP/scripts",
        "target": "ES2020",
        "outDir": "./build",
        "lib": [ "ES2020", "DOM" ], // QuickJS supports up to ES2020
        "declaration": true, // Generate declaration files
        "declarationDir": "./types", // Output directory for declaration files
    },
    "exclude": [ "node_modules", "build", "dist", "**/*.js", "**/*.jsx", "tools/autoPR/*" ],
    "include": ["./BP/scripts/**/*"]
    
}