{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_ord:transform_light_blip",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/gm1/ord/particle/light_blips" }
        },
        "curves": {
            "variable.size_y": {
                "type": "linear",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [ 1, 0 ]
            },
            "variable.size_x": {
                "type": "linear",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [ 0, 1 ]
            }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": 48, "max_particles": 100 },
            "minecraft:emitter_lifetime_once": { "active_time": 1.5 },
            "minecraft:emitter_shape_box": {
                "offset": [ 0, -0.5, 0 ],
                "half_dimensions": [ 0.5, 1, 0.5 ],
                "surface_only": true,
                "direction": "outwards"
            },
            "minecraft:particle_lifetime_expression": { "max_lifetime": 0.2 },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_motion_dynamic": {},
            "minecraft:particle_appearance_billboard": {
                "size": [ "0.33*variable.size_x", "0.33*variable.size_y" ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 64,
                    "texture_height": 16,
                    "flipbook": {
                        "base_UV": [ 0, 0 ],
                        "size_UV": [ 16, 16 ],
                        "step_UV": [ 16, 0 ],
                        "max_frame": 4,
                        "stretch_to_lifetime": true
                    }
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "math.round(v.particle_random_3*2)",
                    "gradient": { "0.0": "#ffffffff", "1.0": "#FF93FFCF", "2.0": "#FFF896FF" }
                }
            }
        }
    }
}