{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_ord:eggman_smoke",
            "basic_render_parameters": { "material": "particles_alpha", "texture": "textures/gm1/ord/particle/poof" }
        },
        "curves": {
            "variable.size": {
                "type": "bezier",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [ 1, 1, 1, 0 ]
            }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": 33, "max_particles": 100 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_sphere": {
                "radius": 0.25,
                "direction": [ "math.random(-0.1,0.1)", "math.random(-0.1,0.1)", 1 ]
            },
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(1,2)" },
            "minecraft:particle_initial_spin": { "rotation": "math.random(0,360)", "rotation_rate": 45 },
            "minecraft:particle_initial_speed": 3,
            "minecraft:particle_motion_dynamic": { "linear_acceleration": [ 0, 1, 0 ]},
            "minecraft:particle_appearance_billboard": {
                "size": [ "0.33*variable.size", "0.33*variable.size" ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 64,
                    "texture_height": 16,
                    "uv": [ "math.round(v.particle_random_2*3)*16", 0 ],
                    "uv_size": [ 16, 16 ]
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "variable.particle_age/variable.particle_lifetime+math.clamp(variable.particle_random_3,0.1,0.2)",
                    "gradient": { "0.0": "#FFFFFFFF", "0.2": "#FFC6B9BE", "0.5": "#FF8A978F", "0.8": "#FF2A1F1F" }
                }
            }
        }
    }
}