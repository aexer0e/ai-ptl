{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_ord:eggman_stunned",
            "basic_render_parameters": {
                "material": "particles_alpha",
                "texture": "textures/gm1/ord/particle/stunned_stars"
            }
        },
        "curves": {
            "variable.motion": {
                "type": "bezier",
                "input": "variable.particle_age/variable.particle_lifetime",
                "horizontal_range": 1,
                "nodes": [ 0, 2, 0, 0 ]
            },
            "variable.size_x": {
                "type": "linear",
                "input": "variable.particle_age/variable.particle_lifetime",
                "horizontal_range": 1,
                "nodes": [ 0.025, 0.12, 0.155 ]
            },
            "variable.size_y": {
                "type": "linear",
                "input": "variable.particle_age/variable.particle_lifetime",
                "horizontal_range": 1,
                "nodes": [ 0.05, 0.4, 0 ]
            }
        },
        "events": {
            "pspawn": { "expression": "variable.o = variable.o + 1; variable.deg = (variable.d/variable.p)*variable.o;" }
        },
        "components": {
            "minecraft:emitter_initialization": {
                "creation_expression": "variable.o = 0; variable.p = 12; variable.d = 360; variable.deg = 0; variable.rad = 1.7;"
            },
            "minecraft:emitter_local_space": { "position": true, "rotation": true, "velocity": true },
            "minecraft:emitter_rate_steady": { "spawn_rate": 8, "max_particles": 100 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1.6 },
            "minecraft:emitter_shape_point": {
                "offset": [
                    "-math.sin(variable.deg)*variable.rad",
                    "-math.sin(variable.deg*4)*0.1",
                    "-math.cos(variable.deg)*variable.rad"
                ],
                "direction": [ 0, 1, 0 ]
            },
            "minecraft:particle_lifetime_expression": { "max_lifetime": 0.7 },
            "minecraft:particle_lifetime_events": { "creation_event": "pspawn" },
            "minecraft:particle_initial_speed": 0.33,
            "minecraft:particle_motion_dynamic": { "linear_drag_coefficient": 1 },
            "minecraft:particle_appearance_billboard": {
                "size": [ 0.3, 0.3 ],
                "facing_camera_mode": "rotate_y",
                "uv": {
                    "texture_width": 64,
                    "texture_height": 16,
                    "flipbook": {
                        "base_UV": [ 0, 0 ],
                        "size_UV": [ 16, 16 ],
                        "step_UV": [ 16, 0 ],
                        "max_frame": 4,
                        "stretch_to_lifetime": true
                    }
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "variable.particle_age/variable.particle_lifetime",
                    "gradient": { "0.0": "#FFFFFFFF", "0.5": "#FFFFFFFF", "1.0": "#FF999999" }
                }
            }
        }
    }
}