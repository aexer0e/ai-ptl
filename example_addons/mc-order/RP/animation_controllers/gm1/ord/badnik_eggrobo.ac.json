{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.gm1_ord.badnik_eggrobo_attack": {
            "initial_state": "none",
            "states": {
                "none": { "transitions": [{ "attack": "v.is_shooting" }], "blend_transition": 0.1 },
                "attack": {
                    "animations": [ "shoot", "shoot_sfx" ],
                    "transitions": [{ "none": "query.any_animation_finished" }],
                    "blend_transition": 0.1
                }
            }
        },
        "controller.animation.gm1_ord.badnik_eggrobo_movement": {
            "initial_state": "deploy",
            "states": {
                "deploy": {
                    "animations": [ "deploy" ],
                    "transitions": [{ "move": "query.all_animations_finished" }],
                    "blend_transition": 0.5
                },
                "move": { "animations": [ "move" ], "blend_transition": 0.25 }
            }
        }
    }
}