{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.gm1_ord.eggman.gadget_eggrobo": {
            "initial_state": "default",
            "states": {
                "default": { "transitions": [{ "hatch_deploy": "v.is_dropping_eggrobo" }], "blend_transition": 0.25 },
                "hatch_deploy": {
                    "animations": [ "hatch_deploy", "eggrobo_deploy_sfx" ],
                    "transitions": [{ "hatch_close": "q.all_animations_finished" }]
                },
                "hatch_close": {
                    "animations": [ "hatch_close" ],
                    "transitions": [{ "default": "!v.is_dropping_eggrobo && q.all_animations_finished" }]
                }
            }
        }
    }
}