{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_sky:player_spawn",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/gm1/sky/particle/onezero" }
        },
        "curves": {
            "variable.size": {
                "type": "bezier",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [ 0, 1.5, 1.5, 0 ]
            }
        },
        "components": {
            "minecraft:emitter_rate_instant": { "num_particles": 64 },
            "minecraft:emitter_lifetime_once": { "active_time": 1 },
            "minecraft:emitter_shape_sphere": { "radius": 0.1, "surface_only": true, "direction": "outwards" },
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(1,3)" },
            "minecraft:particle_initial_speed": "math.random(1,3)",
            "minecraft:particle_motion_dynamic": { "linear_drag_coefficient": 2 },
            "minecraft:particle_appearance_billboard": {
                "size": [ 0.1, 0.1 ],
                "facing_camera_mode": "lookat_xyz",
                "uv": {
                    "texture_width": 32,
                    "texture_height": 16,
                    "uv": [ "math.round(variable.particle_random_1)*16", 0 ],
                    "uv_size": [ 16, 16 ]
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": [ 0.25, 1, 0.25, "math.clamp(math.sin((v.particle_age*360)+(v.particle_random_1*360)),0,1)" ]
            }
        }
    }
}