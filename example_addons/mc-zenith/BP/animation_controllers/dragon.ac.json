{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.gm1_zen.dragon.avoiding_mobs_detector": {
            "initial_state": "default",
            "states": {
                "default": { "transitions": [{ "is_avoiding_mobs": "query.is_avoiding_mobs" }]},
                "is_avoiding_mobs": {
                    "transitions": [{ "default": "!query.is_avoiding_mobs" }],
                    "on_entry": [ "/scriptevent gm1_zen:dragon_is_avoiding_mobs" ]
                }
            }
        }
    }
}