// @prettier-ignore
{
    "$identifier": "gm1_zen:dragon_fx",
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "animations": {
                "glint_animation": "animation.gm1_zen.glint",
                "grab_sfx": "animation.gm1_zen.dragon_global.grab_sfx",
                "panic_sfx": "animation.gm1_zen.dragon_global.panic_sfx",
