{
    "format_version": "1.8.0",
    "render_controllers": {
        "controller.render.gm1_zen.dragon_paint": {
            "geometry": "Geometry.default",
            "materials": [{ "*": "Material.default" }],
            "textures": [ "Array.colors[q.property('gm1_zen:color')]" ],
            "arrays": {
                "textures": {
                    "Array.colors": [
                        "Texture.empty",
                        "Texture.white",
                        "Texture.orange",
                        "Texture.magenta",
                        "Texture.light_blue",
                        "Texture.yellow",
                        "Texture.lime",
                        "Texture.pink",
                        "Texture.gray",
                        "Texture.light_gray",
                        "Texture.cyan",
                        "Texture.purple",
                        "Texture.blue",
                        "Texture.brown",
                        "Texture.green",
                        "Texture.red",
                        "Texture.black"
                    ]
                }
            },
            "part_visibility": [
                {
                    "*finger_open*": "!query.is_in_water && ((!query.is_on_ground && v.time_since_ground > 0.5) || (!query.is_on_ground && query.vertical_speed > 5) || (!query.is_on_ground && query.vertical_speed > 0)) && (!query.is_chested || query.is_baby || query.is_on_ground || v.dive_time <= 0.4) && !(v.time_since_ground > 0.8 && query.vertical_speed < -4)"
                },
                {
                    "*finger_closed*": "query.is_in_water || ((v.time_since_ground <= 0.5 && (query.is_on_ground || query.vertical_speed <= 5)) || (v.time_since_ground <= 0.5 && (query.is_on_ground || query.vertical_speed <= 0)) || (query.is_chested && !query.is_baby && !query.is_on_ground && v.dive_time > 0.4) || (v.time_since_ground > 0.8 && query.vertical_speed < -4))"
                }
            ]
        }
    }
}