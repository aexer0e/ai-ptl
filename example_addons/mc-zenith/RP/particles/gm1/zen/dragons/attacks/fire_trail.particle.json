{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_zen:fire_trail",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/gm1/zen/particle/explode" }
        },
        "curves": {
            "variable.size": {
                "type": "linear",
                "input": "variable.particle_age/variable.particle_lifetime",
                "horizontal_range": 1,
                "nodes": [ 0.89, 1.54, 0 ]
            }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": 16, "max_particles": 64 },
            "minecraft:emitter_lifetime_looping": { "active_time": 2 },
            "minecraft:emitter_shape_point": { "direction": [ "math.random(-0.5,0.5)", 1, "math.random(-0.5,0.5)" ]},
            "minecraft:particle_lifetime_expression": { "max_lifetime": 1 },
            "minecraft:particle_initial_spin": {
                "rotation": "math.random(0,360)",
                "rotation_rate": "(variable.particle_random_3*360)*math.random(-1,1)"
            },
            "minecraft:particle_initial_speed": 1,
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [ "math.sin(v.particle_age * 90)", -10, "math.cos(v.particle_age * 40)" ],
                "linear_drag_coefficient": 5
            },
            "minecraft:particle_appearance_billboard": {
                "size": [ "variable.size", "variable.size" ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 16,
                    "texture_height": 48,
                    "uv": [ 0, "math.round(variable.particle_random_2*2)*16" ],
                    "uv_size": [ 16, 16 ]
                }
            },
            "minecraft:particle_motion_collision": { "collision_drag": 10, "collision_radius": 0.2 },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "v.particle_age / v.particle_lifetime",
                    "gradient": { "0.0": "#FF000000", "0.5": "#FF7E3900", "1.0": "#FF511800" }
                }
            }
        }
    }
}