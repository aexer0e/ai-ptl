{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "gm1_zen:quill_blast",
            "basic_render_parameters": { "material": "particles_blend", "texture": "textures/gm1/zen/particle/smoke" }
        },
        "curves": {
            "variable.size": {
                "type": "bezier_chain",
                "input": "variable.particle_age/variable.particle_lifetime",
                "nodes": { "0.0": { "value": 0, "slope": 0 }, "1.0": { "value": 1, "slope": 0 }}
            }
        },
        "components": {
            "minecraft:emitter_local_space": { "position": true, "rotation": true },
            "minecraft:emitter_rate_instant": { "num_particles": 1 },
            "minecraft:emitter_lifetime_once": { "active_time": "math.random(0.5,1.5)" },
            "minecraft:emitter_shape_point": { "offset": [ -1, -1, -1 ]},
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": "math.clamp(variable.particle_random_2,0.5,1.5)"
            },
            "minecraft:particle_initial_spin": { "rotation": "math.random(-180, 180)" },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_motion_dynamic": { "linear_drag_coefficient": 4 },
            "minecraft:particle_appearance_billboard": {
                "size": [ "(variable.size)*2", "(variable.size)*2" ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 16,
                    "texture_height": 128,
                    "flipbook": {
                        "base_UV": [ 0, 0 ],
                        "size_UV": [ 16, 16 ],
                        "step_UV": [ 0, 16 ],
                        "frames_per_second": 12,
                        "max_frame": 8,
                        "stretch_to_lifetime": true
                    }
                }
            },
            "minecraft:particle_appearance_lighting": {},
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "v.particle_age / v.particle_lifetime",
                    "gradient": { "0.0": "#FFFFFFFF", "1.0": "#0FFFFFFF" }
                }
            }
        }
    }
}