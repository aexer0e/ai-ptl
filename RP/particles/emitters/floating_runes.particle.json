{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:floating_runes",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/particle/rune" }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": "variable.emitter_density * 1", "max_particles": 20 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_box": {
                "half_dimensions": [ "variable.emitter_spread * 0.8", 0.1, "variable.emitter_spread * 0.8" ],
                "direction": [ 0, 1, 0 ]
            },
            "minecraft:particle_initial_speed": "math.random(0.4, 1.0)",
            "minecraft:particle_initial_spin": {
                "rotation": "math.random(0, 360)",
                "rotation_rate": "math.random(-20, 20)"
            },
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(2.5, 4.5)" },
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [
                    "math.sin(variable.particle_age * 2 + variable.particle_random_1 * 6.28) * 0.3",
                    0.3,
                    "math.cos(variable.particle_age * 2 + variable.particle_random_2 * 6.28) * 0.3"
                ],
                "linear_drag_coefficient": 0.8,
                "rotation_drag_coefficient": 0.1
            },
            "minecraft:particle_appearance_billboard": {
                "size": [ "0.12 + variable.particle_random_1 * 0.06", "0.12 + variable.particle_random_1 * 0.06" ],
                "facing_camera_mode": "lookat_xyz",
                "uv": { "texture_width": 32, "texture_height": 32, "uv": [ 0, 0 ], "uv_size": [ 32, 32 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "gradient": {
                        "0.0": [ 0.6, 0.3, 1, 0 ],
                        "0.15": [ 0.6, 0.3, 1, 0.9 ],
                        "0.7": [ 0.4, 0.2, 0.9, 0.8 ],
                        "1.0": [ 0.3, 0.1, 0.7, 0 ]
                    },
                    "interpolant": "variable.particle_age / variable.particle_lifetime"
                }
            }
        }
    }
}