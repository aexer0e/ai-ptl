                "surface_only": true
            },
            "minecraft:particle_initial_speed": "math.random(3, 8)",
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(0.2, 0.6)" },
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [ 0, -15, 0 ],
