                "uv": { "texture_width": 32, "texture_height": 32, "uv": [ 0, 0 ], "uv_size": [ 32, 32 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "gradient": {
                        "0.0": [ 1, 1, 0.9, 1 ],
                        "0.3": [ 1, 0.7, 0.2, 1 ],
                        "0.7": [ 1, 0.4, 0.1, 0.8 ],
                        "1.0": [ 0.8, 0.2, 0.05, 0 ]
