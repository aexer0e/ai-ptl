{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:welding_sparks",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/particle/welding_spark" }
        },
        "components": {
