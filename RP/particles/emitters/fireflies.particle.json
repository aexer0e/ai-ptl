{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:fireflies",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/particle/firefly" }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": "variable.emitter_density * 0.5", "max_particles": 20 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_box": {
                "offset": [ 0, 1, 0 ],
                "half_dimensions": [ "variable.emitter_spread", 1, "variable.emitter_spread" ],
                "direction": [ 0, 0, 0 ]
            },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(3.0, 6.0)" },
            "minecraft:particle_motion_parametric": {
                "relative_position": [
                    "math.sin(variable.particle_age * 1.5 + variable.particle_random_1 * 6.28) * 0.4",
                    "math.sin(variable.particle_age * 0.8 + variable.particle_random_2 * 6.28) * 0.3",
                    "math.cos(variable.particle_age * 1.2 + variable.particle_random_3 * 6.28) * 0.4"
                ]
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "(0.04 + variable.particle_random_1 * 0.02) * (0.5 + 0.5 * math.abs(math.sin(variable.particle_age * 3 + variable.particle_random_2 * 6.28)))",
                    "(0.04 + variable.particle_random_1 * 0.02) * (0.5 + 0.5 * math.abs(math.sin(variable.particle_age * 3 + variable.particle_random_2 * 6.28)))"
                ],
                "facing_camera_mode": "lookat_xyz",
                "uv": { "texture_width": 32, "texture_height": 32, "uv": [ 0, 0 ], "uv_size": [ 32, 32 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": [
                    "0.7 + 0.3 * math.abs(math.sin(variable.particle_age * 3 + variable.particle_random_1 * 6.28))",
                    "0.9 + 0.1 * math.abs(math.sin(variable.particle_age * 3 + variable.particle_random_1 * 6.28))",
                    0.2,
                    "0.3 + 0.7 * math.abs(math.sin(variable.particle_age * 3 + variable.particle_random_2 * 6.28))"
                ]
            }
        }
    }
}