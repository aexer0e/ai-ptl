{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:void_tendrils",
            "basic_render_parameters": { "material": "particles_blend", "texture": "textures/particle/void_particle" }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": "variable.emitter_density * 4", "max_particles": 80 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_box": {
                "half_dimensions": [ "variable.emitter_spread * 0.8", 0.02, "variable.emitter_spread * 0.8" ],
                "direction": [ 0, 1, 0 ]
            },
            "minecraft:particle_initial_speed": "math.random(0.3, 0.8)",
            "minecraft:particle_initial_spin": {
                "rotation": "math.random(0, 360)",
                "rotation_rate": "math.random(-50, 50)"
            },
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(1.8, 3.5)" },
            "minecraft:particle_motion_parametric": {
                "relative_position": [
                    "math.sin(variable.particle_age * 4 + variable.particle_random_1 * 6.28) * 0.15 * variable.particle_age",
                    "variable.particle_age * 0.7",
                    "math.cos(variable.particle_age * 4 + variable.particle_random_2 * 6.28) * 0.15 * variable.particle_age"
                ]
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "(0.08 + variable.particle_random_1 * 0.04) * (1 - variable.particle_age / variable.particle_lifetime * 0.5)",
                    "(0.08 + variable.particle_random_1 * 0.04) * (1 - variable.particle_age / variable.particle_lifetime * 0.5)"
                ],
                "facing_camera_mode": "lookat_xyz",
                "uv": { "texture_width": 32, "texture_height": 32, "uv": [ 0, 0 ], "uv_size": [ 32, 32 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "gradient": {
                        "0.0": [ 0.1, 0.02, 0.2, 0.9 ],
                        "0.4": [ 0.25, 0.08, 0.45, 0.75 ],
                        "0.7": [ 0.35, 0.1, 0.55, 0.5 ],
                        "1.0": [ 0.4, 0.15, 0.6, 0 ]
                    },
                    "interpolant": "variable.particle_age / variable.particle_lifetime"
                }
            }
        }
    }
}