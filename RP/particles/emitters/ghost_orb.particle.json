{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:ghost_orb",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/particle/particles" }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": "variable.emitter_density * 0.1", "max_particles": 3 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_point": {
                "offset": [
                    "variable.emitter_spread * (Math.random(-0.5, 0.5))",
                    0.5,
                    "variable.emitter_spread * (Math.random(-0.5, 0.5))"
                ],
                "direction": [ 0, 0, 0 ]
            },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_lifetime_expression": { "max_lifetime": "Math.random(5.0, 10.0)" },
            "minecraft:particle_motion_parametric": {
                "relative_position": [
                    "Math.sin(variable.particle_age * 0.5 + variable.particle_random_1 * 6.28) * 2",
                    "Math.sin(variable.particle_age * 0.3) * 0.5 + 0.5",
                    "Math.cos(variable.particle_age * 0.5 + variable.particle_random_2 * 6.28) * 2"
                ]
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "0.15 + Math.sin(variable.particle_age * 2) * 0.05",
                    "0.15 + Math.sin(variable.particle_age * 2) * 0.05"
                ],
                "facing_camera_mode": "lookat_xyz",
                "uv": { "texture_width": 128, "texture_height": 128, "uv": [ 0, 24 ], "uv_size": [ 8, 8 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": [ 0.6, 0.8, 1, "0.4 + Math.sin(variable.particle_age * 1.5) * 0.3" ]
            }
        }
    }
}