{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "ns_ptl:ghost_orb",
            "basic_render_parameters": { "material": "particles_add", "texture": "textures/particle/ghost_orb" }
        },
        "components": {
            "minecraft:emitter_rate_steady": { "spawn_rate": "variable.emitter_density * 0.15", "max_particles": 5 },
            "minecraft:emitter_lifetime_looping": { "active_time": 1 },
            "minecraft:emitter_shape_sphere": {
                "offset": [ 0, 0.5, 0 ],
                "radius": "variable.emitter_spread * 0.5",
                "direction": [ 0, 0, 0 ]
            },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_lifetime_expression": { "max_lifetime": "math.random(6.0, 12.0)" },
            "minecraft:particle_motion_parametric": {
                "relative_position": [
                    "math.sin(variable.particle_age * 0.4 + variable.particle_random_1 * 6.28) * (1.0 + variable.emitter_spread * 0.5)",
                    "math.sin(variable.particle_age * 0.25 + variable.particle_random_3 * 6.28) * 0.6 + 0.5",
                    "math.cos(variable.particle_age * 0.35 + variable.particle_random_2 * 6.28) * (1.0 + variable.emitter_spread * 0.5)"
                ]
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "(0.12 + variable.particle_random_1 * 0.06) * (0.8 + 0.2 * math.sin(variable.particle_age * 1.5 + variable.particle_random_2 * 6.28))",
                    "(0.12 + variable.particle_random_1 * 0.06) * (0.8 + 0.2 * math.sin(variable.particle_age * 1.5 + variable.particle_random_2 * 6.28))"
                ],
                "facing_camera_mode": "lookat_xyz",
                "uv": { "texture_width": 32, "texture_height": 32, "uv": [ 0, 0 ], "uv_size": [ 32, 32 ]}
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "gradient": {
                        "0.0": [ 0.5, 0.7, 1, 0 ],
                        "0.1": [ 0.6, 0.8, 1, 0.5 ],
                        "0.5": [ 0.5, 0.75, 1, "0.3 + 0.2 * math.sin(variable.particle_age * 1.5)" ],
                        "0.9": [ 0.6, 0.8, 1, 0.4 ],
                        "1.0": [ 0.5, 0.7, 1, 0 ]
                    },
                    "interpolant": "variable.particle_age / variable.particle_lifetime"
                }
            }
        }
    }
}