            },
            "minecraft:particle_appearance_tinting": {
                "color": [
                    1,
                    0.2,
                    0.2,
                    "(variable.particle_age < 0.3 || (variable.particle_age > 1.0 && variable.particle_age < 1.2) || variable.particle_age > variable.particle_lifetime - 0.3) ? 0.0 : 1.0"
